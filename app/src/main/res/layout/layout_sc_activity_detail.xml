<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sc_dtl_linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:transitionName="@string/sc_rcy_item_2_scDtl"
        tools:targetApi="lollipop">

        <LinearLayout
            android:id="@+id/sc_dtl_topLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/sc_dtl_rcy_dot_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#8101abe9" />

            <TextView
                android:id="@+id/sc_dtl_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="14"
                android:text="【天天讲】"
                android:textColor="@color/blue700" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sc_dtl_linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sc_dtl_WeekTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="TODAY"
                android:textColor="@color/blue700"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sc_dtl_imageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:contentDescription="时间"
                    app:srcCompat="@drawable/ic_access_time_green_24dp" />

                <TextView
                    android:id="@+id/sc_dtl_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="TODAY"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/sc_dtl_TitleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sc_dtl_linearLayout3"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.25"
            android:lines="2"
            android:text="党的十九大精神宣讲：建设美丽中国，实现美好生活党的十九大精神宣讲：建设美丽中国，实现美好生活"
            android:textColor="@color/grey900"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sc_dtl_linearLayout4">

        <ProgressBar
            android:id="@+id/sc_dtl_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:foregroundGravity="center"
            android:visibility="visible" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/blue700"
                android:text="申请"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginEnd="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="30dp"
                android:lineSpacingMultiplier="1.5"
                android:text="          材料学院2018年考研宣讲会,材料学院2018年考研宣讲会 ,材料学院2018年考研宣讲会 ,材料学院2018年考研宣讲会 ,材料学院2018年考研宣讲会 ,材料学院2018年考研宣讲会  "
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text=" 主办方：材料学院       承办方：材料学院" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="2018-01-10 18:00:00  --至--  2018-01-10 20:00:00" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="活动时长：120 分钟" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignStart="@+id/textView3"
                android:text="活动地点：图B102" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>