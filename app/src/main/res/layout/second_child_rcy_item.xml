<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    android:layout_marginTop="2dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/sc_child_rcy_headerView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@android:color/transparent">

        </View>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/rcy_dot_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#81ffffff" />

            <TextView
                android:id="@+id/sc_child_rcy_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="14"
                android:text="【天天讲】"
                android:textColor="@color/blue700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sc_child_rcy_WeekTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="TODAY"
                android:textColor="@color/blue700"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:contentDescription="时间"
                    app:srcCompat="@drawable/ic_access_time_green_24dp" />

                <TextView
                    android:layout_marginStart="@dimen/dp_10"
                    android:id="@+id/sc_child_rcy_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAY"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/sc_child_rcy_TitleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="25dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.25"
            android:lines="2"
            android:text="党的十九大精神宣讲：建设美丽中国，实现美好生活党的十九大精神宣讲：建设美丽中国，实现美好生活"
            android:textColor="@color/grey900"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
